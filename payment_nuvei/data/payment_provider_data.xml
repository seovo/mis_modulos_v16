<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="payment_method_nuvei" model="payment.method">
            <field name="name">Nuvei</field>
            <field name="code">nuvei</field>
            <field name="sequence">80</field>
            <field name="active">True</field>
            <field name="image" type="base64" file="payment_nuvei/static/description/icon.png"/>
            <field name="support_tokenization">False</field>
            <field name="support_express_checkout">False</field>
            <field name="support_refund"></field>
            <field name="supported_country_ids" eval="[Command.set([ref('base.ec'),])]" />
            <field name="supported_currency_ids" eval="[Command.set([ref('base.USD'),])]" />
        </record>

        <record id="payment_provider_nuvei" model="payment.provider">
            <field name="name">Nuvei</field>
            <field name="image_128" type="base64" file="payment_nuvei/static/src/img/logo.png"/>
            <field name="module_id" ref="base.module_payment_nuvei"/>
            <field name="payment_method_ids" eval="[(6, 0, [ref('payment_nuvei.payment_method_nuvei'),])]"/>
            <field name="code">nuvei</field>
            <field name="redirect_form_view_id" ref="nuvei_provider_button" />
            <field name="company_id" ref="base.main_company"/>
        </record>

    </data>
</odoo>