<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
	<record id="payment_nuvei_transaction_form_inherit" model="ir.ui.view">
        <field name="name">payment.nuvei.transaction.form.inherit</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_form"/>
        <field name="arch" type="xml">
            <field name="provider_reference" position="after">
                <field name="provider_code" invisible="1"/>
                <field name="authorization_code" invisible="provider_code == 'nuvei'"/>
            </field>
        </field>
    </record>

</odoo>
