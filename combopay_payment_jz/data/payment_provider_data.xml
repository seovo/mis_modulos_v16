<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_combopa" model="payment.method">
            <field name="name">ComboPay</field>
            <field name="code">combopay</field>
            <field name="sequence">80</field>
            <field name="active">True</field>
            <field name="image" type="base64" file="combopay_payment_jz/static/description/icon.png"/>
            <field name="support_tokenization">False</field>
            <field name="support_express_checkout">False</field>
            <!--<field name="support_refund"></field>  -->
            <!--
                <field name="supported_country_ids" eval="[Command.set([ref('base.ec'),])]" />
                <field name="supported_currency_ids" eval="[Command.set([ref('base.USD'),])]" />
             -->
    </record>



    <record id="payment_provider_combopay" model="payment.provider">
            <field name="name">ComboPay</field>
            <field name="image_128" type="base64" file="combopay_payment_jz/static/description/icon.png"/>
            <field name="module_id" ref="base.module_combopay_payment_jz"/>
            <field name="payment_method_ids" eval="[(6, 0, [ref('combopay_payment_jz.payment_method_combopa'),])]"/>
            <field name="code">combopay</field>
            <field name="redirect_form_view_id" ref="redirect_form"/>

            <field name="company_id" ref="base.main_company"/>
    </record>

</odoo>
