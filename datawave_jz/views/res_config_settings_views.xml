<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="50"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Datawave" string="Datawave" name="datawave_jz" >
                        <block title="Sql Server Accesss" id="sql_server_acsess">
                            <setting >
                                <field name="sql_server_host" placeholder="Host"/>
                            </setting>
                            <setting >
                                <field name="sql_server_user" placeholder="User" />
                            </setting>
                            <setting >
                                <field name="sql_server_password" placeholder="Password" />
                            </setting>
                            <setting >
                                <field name="sql_server_database" placeholder="Database"/>
                            </setting>
                            <setting >
                                <field name="tenant_id" placeholder="Database"/>
                            </setting>

                        </block>

                        <block title="Range Configs" id="sql_server_acsess">
                            <setting string="ABC" >
                                <field name="abc_a_start" />
                                <field name="abc_a_end"  />
                            </setting>
                        </block>


                        <block title="Total Nine Box" id="settings_total_nine_box">
                            <setting >
                                <field name="nine_box_start_date" placeholder="Start Date"/>
                            </setting>
                            <setting >
                                <field name="nine_box_end_date" placeholder="End Date" />
                            </setting>
                            <setting >
                                 <field name="nine_box_days_per_month" />
                            </setting>
                            <setting >
                                <field name="nine_box_type"/>
                            </setting>

                            <button type="object" name="sync_nine_box" string="Sincronizar"
                                     icon="oi-arrow-right" class="btn-primary"/>

                        </block>



                        <block title="Total Nine Box MC" id="settings_total_nine_box_mc">
                            <setting >
                                <field name="nine_box_mc_start_date" placeholder="Start Date"/>
                            </setting>
                            <setting >
                                <field name="nine_box_mc_end_date" placeholder="End Date" />
                            </setting>
                            <setting >
                                 <field name="nine_box_mc_days_per_month" />
                            </setting>
                            <setting >
                                <field name="nine_box_mc_type_cost"/>
                            </setting>
                            <setting >
                                <field name="nine_box_mc_type_price"/>
                            </setting>

                            <button type="object" name="sync_nine_box_mc" string="Sincronizar"
                                     icon="oi-arrow-right" class="btn-primary"/>

                        </block>



                    </app>

                </xpath>
            </field>
        </record>

        <record id="datawave_jz_config_settings_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'datawave_jz', 'bin_size': False}</field>
        </record>

        <menuitem id="project_config_settings_menu_action" name="Settings"
                  parent="datawave_jz.menu_data_wave"
                  sequence="0" action="datawave_jz_config_settings_action" />
</odoo>
